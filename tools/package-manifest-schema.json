{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Package Manifest",
  "type": "object",
  "required": ["version", "name", "entry_point"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the agent package",
      "pattern": "^\\d+\\.\\d+\\.\\d+"
    },
    "name": {
      "type": "string",
      "description": "Unique name identifier for the agent",
      "pattern": "^[a-z0-9-_]+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the agent"
    },
    "entry_point": {
      "type": "string",
      "description": "Path to the main JavaScript entry point (relative to package root)",
      "default": "dist/index.js"
    },
    "baml_schema_version": {
      "type": "string",
      "description": "Version of BAML schema format used"
    },
    "runtime_version": {
      "type": "string",
      "description": "Required minimum version of baml-rt runtime",
      "pattern": "^\\d+\\.\\d+\\.\\d+"
    },
    "dependencies": {
      "type": "object",
      "description": "Runtime dependencies and versions",
      "properties": {
        "node": {
          "type": "string",
          "description": "Required Node.js version (for reference, not enforced)"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "author": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}

